generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Transaction {
  id          Int      @id @default(autoincrement())
  description String
  amount      Float
  category    String
  date        DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  analysisId  Int?
  analysis    Analysis? @relation(fields: [analysisId], references: [id])
}

model Analysis {
  id                Int      @id @default(autoincrement())
  totalSpent        Float
  subscriptions     Int
  subscriptionCost  Float
  predictedNext     Float
  savingsPotential  Float
  insights          String
  duplicates        String
  tokensUsed        Int      @default(0)
  model             String   @default("groq")
  createdAt         DateTime @default(now())
  
  transactions      Transaction[]
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String @unique
  icon  String
  color String
}